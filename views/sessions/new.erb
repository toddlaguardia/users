<h2>Sign In</h2>
<%= session[:errors] %>
<% session[:errors] = nil %>
<form action="/sessions" method="post">
	<p>
		<label for="email">Email</label>
		<input type="email" id="email" name="email">
	</p>
	<p>
		<label for="pw">Password</label>
		<input type="password" id="pw" name="pw">
	</p>
	<input type="submit" value="Sign In">
</form>